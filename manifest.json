{
    "manifest_version": 3,
    "name": "CLO â€” Cross-LLM Context Orchestrator",
    "version": "0.2.0",
    "description": "Seamless reasoning portability across 15+ LLM platforms. Never lose context again.",
    "permissions": [
        "storage",
        "activeTab",
        "tabs",
        "scripting"
    ],
    "host_permissions": [
        "https://chatgpt.com/*",
        "https://chat.openai.com/*",
        "https://claude.ai/*",
        "https://gemini.google.com/*",
        "https://grok.x.ai/*",
        "https://x.com/i/grok*",
        "https://www.perplexity.ai/*",
        "https://perplexity.ai/*",
        "https://chat.deepseek.com/*",
        "https://www.deepseek.com/*",
        "https://kimi.moonshot.cn/*",
        "https://kimi.com/*",
        "https://manus.im/*",
        "https://manus.ai/*",
        "https://copilot.microsoft.com/*",
        "https://you.com/*",
        "https://poe.com/*",
        "https://huggingface.co/chat/*",
        "https://tongyi.aliyun.com/*",
        "https://qwen.ai/*",
        "https://chat.mistral.ai/*",
        "https://coral.cohere.com/*",
        "https://dashboard.cohere.com/*"
    ],
    "background": {
        "service_worker": "src/background/index.ts",
        "type": "module"
    },
    "content_scripts": [
        {
            "matches": [
                "https://chatgpt.com/*",
                "https://chat.openai.com/*",
                "https://claude.ai/*",
                "https://gemini.google.com/*",
                "https://grok.x.ai/*",
                "https://x.com/i/grok*",
                "https://www.perplexity.ai/*",
                "https://perplexity.ai/*",
                "https://chat.deepseek.com/*",
                "https://www.deepseek.com/*",
                "https://kimi.moonshot.cn/*",
                "https://kimi.com/*",
                "https://manus.im/*",
                "https://manus.ai/*",
                "https://copilot.microsoft.com/*",
                "https://you.com/*",
                "https://poe.com/*",
                "https://huggingface.co/chat/*",
                "https://tongyi.aliyun.com/*",
                "https://qwen.ai/*",
                "https://chat.mistral.ai/*",
                "https://coral.cohere.com/*",
                "https://dashboard.cohere.com/*"
            ],
            "js": [
                "src/content/index.ts"
            ],
            "css": [
                "overlay.css"
            ],
            "run_at": "document_idle"
        }
    ],
    "action": {
        "default_popup": "src/popup/index.html",
        "default_icon": {
            "16": "icons/icon16.png",
            "48": "icons/icon48.png",
            "128": "icons/icon128.png"
        }
    },
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    }
}